@model Upload_img_db.Models.ImageModel

@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create","ImageModels",FormMethod.Post,new {enctype="multipart/form-data"}))
{

<h2>Create</h2>

@*<h4>ImageModel</h4>*@
<hr />
